.container{background: transparent;}
.background-bar{background: #e41c26;width: 100%;height: 240rpx;position: absolute;z-index: -1;}

.line-list{margin: 0 30rpx;box-shadow: 0 8rpx 10rpx 0 #eee;}

.user-top{margin: auto 30rpx;border-radius: 15rpx;box-shadow: 0 8rpx 8rpx 0 #eee;}
.user-top .user-line{padding: 40rpx 60rpx;}
.user-top .column{padding: 0 20rpx 20rpx 20rpx;}

.shadow-alert{width: 400rpx;margin: 400rpx auto;}
.alert-close{z-index: 2;width: 50rpx;height: 130rpx;position: absolute;margin: 50rpx 0 0 350rpx;}
.alert-bg{width: 400rpx;height: 400rpx;position: absolute;z-index: 1;}
.alert-info{z-index: 2;margin-top: 140rpx;line-height: 50rpx;width: 400rpx;position: absolute;text-align: center;}
.alert-btn{position: absolute;margin-top: 320rpx;z-index: 2;width: 400rpx;}
.alert-btn .btn{border: 2rpx #e41c26 solid;text-align: center;border-radius: 30rpx;color: #e41c26;width: 180rpx;line-height: 60rpx;margin: auto;}

.shadow-frame{margin: 100px 40rpx 0 40rpx;background: #fff;border-radius: 15rpx;border: 2rpx solid #eee;}

.frame{padding: 40rpx;border-bottom: 2rpx solid #eee;}

textarea{width: 100%;margin: auto;padding: 20rpx 0;height: 200rpx;overflow: hidden;}
.textarea-text{text-align: right;font-size: 24rpx;color: #999;line-height: 40rpx;padding-right: 40rpx;}

.xs-submit-btn{padding: 30rpx 40rpx;}
.xs-submit-btn .btn{width: 220rpx;line-height: 60rpx;border-radius: 10rpx;font-size: 28rpx;}
