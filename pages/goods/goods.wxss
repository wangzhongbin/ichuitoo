
.container{background: transparent;}

.top{background: #e41c26;padding: 0 30rpx;}
.top .swiper-box{border-radius: 25rpx 25rpx 0 0;width: 690rpx;height: 350rpx;overflow: hidden;}
.swiper-dot-list{margin-top: 10rpx;}
.swiper-dot-list .dot{background: #d2d2d2;}
