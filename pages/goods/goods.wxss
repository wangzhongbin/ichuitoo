.swiper-small-box{padding: 30rpx 0;background: #fff;}
.swiper-small-box .title{padding: 20rpx 30rpx;line-height: 40rpx;font-size: 40rpx;}
.swiper-small-box .item{padding-left: 30rpx;height: 180rpx;}
.swiper-small-box image{width: 650rpx;border-radius: 15rpx;}